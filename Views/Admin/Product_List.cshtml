@model IEnumerable<Ecommerce.Models.admin_ProductList>

@{
    ViewData["Title"] = "Product_List";
}
<div class="card">
    <div class="card-header" style="background-color:lightgreen;">
        <h1>Product_List</h1>

        <div class="row form-group">
            <div class="offset-9">
                <a class="btn btn-danger" asp-action="Upsert_PL">Create New</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-success" style="background-color:white">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ISBN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categories)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(model => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ISBN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(model => item.Categories.Catergory_Name)
                            </td>
                            <td>
                                <img src="~/Image/@item.Photo" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                            </td>
                            <td>
                                <a asp-action="Upsert_PL" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                               @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                                <form asp-action="Product_List_del" asp-controller="Admin" asp-route-id="@item.Id" method="post">
                                    <a href="#" onclick="this.closest('form').submit(); return confirm('Are You Sure?');" class="btn btn-danger">Delete</a>
                                </form>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No Catogories Exist</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>