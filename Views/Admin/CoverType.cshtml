@model IEnumerable<Ecommerce.Models.admin_CoverType>
@{
    ViewData["Title"] = "CoverType";
}

<div class="card">
    <div class="card-header" style="background-color:lightgreen;">
        <h2 class="col-8">Category List</h2>
        <a class="col-3 btn btn-danger font-weight-bolder form-control" asp-controller="Admin" asp-action="Upsert_CT">+ Create New Category</a>
    </div>

    <div class="card-body">
        <table class="table table-success" style="background-color:white">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cover_Type)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cover_Type)
                            </td>
                            <td>
                                <a asp-action="Upsert_CT" asp-route-id="@item.Id" asp-controller="Admin">
                                    <img src="data:image/png;base64," />
                                    Edit
                                </a> |

                                <!-- Delete Form -->
                                <form asp-action="CoverType" asp-controller="Admin" asp-route-id="@item.Id" method="post" style="display:inline;">
                                    <a href="#" onclick="this.closest('form').submit(); return confirm('Are You Sure?');" class="text-danger">Delete</a>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No CoverType Exist</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
