@model Ecommerce.Models.admin_ProductList

@{
    ViewData["Title"] = "Upsert_PL";
}

<div class="card mx-auto" style="width:80%;">
    <div class="card-header text-center" style="background-color:dodgerblue;">
        <h1>@(Model.Id== 0 ? "Create Product List": "Update Product List")</h1>
    </div>
    <form asp-action="Upsert_PL" enctype="multipart/form-data" method="post">
        <div class="card-body ">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Id != 0)
            {<div class="container text-center form-group">
                    <div><img src="~/Image/@Model.Photo" class="img-thumbnail" height="100" width="100" asp-append-version="true" /></div>
                </div>
            }

            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Title" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="ISBN" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ISBN" class="form-control" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Author" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="ListPrice" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="ListPrice" class="form-control" />

                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Price50" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Price50" class="form-control" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Price100" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Price100" class="form-control" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Cover_TypeID" class="control-label">Cover Type</label>
                </div>
                <div class="col-6">
                    <select asp-for="Cover_TypeID" class="form-control" asp-items="ViewBag.Cover_TypeID">@(Model.Id==0?"--SelectList--":Model.CoverType)</select>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Catergory_Id" class="control-label">Category</label>
                </div>
                <div class="col-6">
                    <select asp-for="Catergory_Id" class="form-control" asp-items="ViewBag.Catergory_Id"></select>
                </div>
            </div>
            <div class=" row form-group">
                <div class="col-6">
                    <label asp-for="Photo" class="control-label"></label>
                </div>
                <div class="col-6">

                    <input type="file" asp-for="ProfileImage" class="form-control" />
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>

            <div class=" row form-group mx-auto">
                <div class="col-6 " style="text-align:right">

                    <input type="submit" value="@(Model.Id==0?"Create":"Update")" class="btn btn-danger" />
                </div>
                <div class="col-6">
                    <a class="btn btn-info" asp-action="Product_List">Back to List</a>
                </div>
            </div>
        </div>
       
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @if (ViewBag.ErrorMessage != null)
    {
        <script type="text/javascript">
            alert('@ViewBag.ErrorMessage');
        </script>
    }
}
