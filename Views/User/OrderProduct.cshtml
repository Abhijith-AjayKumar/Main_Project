@model Ecommerce.Models.UserCart_Tb

@{
    ViewData["Title"] = "OrderProduct";
}

<h1>OrderProduct</h1>

<div class="card card-header">
    <dl class="row">
     
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Admin_ProductList.Title)
        </dd>
        <dd class="img-fluid" height="100" width="70">
            <img src="~/Image/@Model.Admin_ProductList.Photo" height="100" width="70" asp-append-version="true" />
        </dd>
        <dt class="col-sm-2">
            By @Html.DisplayFor(model => model.Admin_ProductList.Author)
</dt>

    </dl>
</div>
<div class=" card card-body">
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Admin_ProductList.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Admin_ProductList.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Admin_ProductList.ListPrice)
        </dt>
        <dd class="col-sm-10">
            <s> @Html.DisplayFor(model => model.Admin_ProductList.ListPrice)</s>
        </dd>
    </dl>
    <div class="form-group">
        <table class="table table-bordered">
            <tr>
                <th>Quantity</th>
                <th class="col-sm-2">
                    <label>1-49</label>
                </th>
                <th class="col-sm-2">
                    <label>50-99</label>
                </th>
                <th class="col-sm-2">
                    <label>100+</label>
                </th>
            </tr>
            <tr>
                <td>Price</td>
                <td class="col-sm-10">
                  Rs. @Html.DisplayFor(model => model.Admin_ProductList.Price)
                </td>
                <td class="col-sm-10">
                   Rs. @Html.DisplayFor(model => model.Admin_ProductList.Price50)
                </td>
                <td class="col-sm-10">
                   Rs. @Html.DisplayFor(model => model.Admin_ProductList.Price100)
                </td>
            </tr>
        </table>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Product_Id" />
        <div class="form-group">
            <label>Count</label>
            <input type="number" min="1" max="200" asp-for="Count" />
        </div>
        <div class="offset-5">
            <input type="submit" class="btn btn-success" asp-action="OrderProduct" value="Add to Cart" /> |
            <a class="btn btn-primary" asp-action="UserHome">Back to List</a>
        </div>
    </form>
</div>

