@model Ecommerce.Models.Register
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4" style="width: 400px;background-color:#def9ce;box-shadow: 0 0 15px 3px rgb(76 255 0 / 0.45);">
        <h2 class="text-center mb-4">Sign In</h2>
        <div class="d-grid gap-2 mb-3">
            <button class="btn btn-primary btn-block">Facebook</button>
            <button class="btn btn-danger btn-block">Google</button>
        </div>
        <div class="text-center mb-3">OR</div>
        <form method="post">
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" required />
            </div>
            <div class="mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" required />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-success form-control">Sign In</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a href="#">Forgot your password?</a>
        </div>
        <div class="text-center mt-3">
            <a asp-action="Registration">Register as a new user</a>
        </div>
    </div>
</div>
@section Scripts {
    @if (ViewBag.ErrorMessage != null)
    {
<script type="text/javascript">
            alert('@ViewBag.ErrorMessage');
</script>}
}